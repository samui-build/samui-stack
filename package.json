{
  "name": "samui-stack",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "ci": "pnpm build && pnpm test --run && pnpm typecheck && pnpm lint",
    "dev": "react-router dev",
    "dev:services": "docker compose up",
    "docker:build": "docker build . -t samui-stack:latest",
    "docker:run": "docker run -it --rm --name samui-stack --env-file .env -e DATABASE_URL=postgresql://samui-stack:samui-stack@host.docker.internal:5432/samui-stack?schema=public -p 3000:3000 samui-stack:latest",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "start": "prisma migrate deploy && prisma generate && react-router-serve ./build/server/index.js",
    "test": "vitest",
    "typecheck": "react-router typegen && tsc"
  },
  "create-solana-dapp": {
    "instructions": [
      "Copy the .env.example file to .env and fill in the values:",
      "cp .env.example .env",
      "Start the docker services:",
      "+{pm} run dev:services",
      "Deploy and push the Prisma schema:",
      "+{pm} run prisma:deploy",
      "Generate the Prisma client:",
      "+{pm} run prisma:generate",
      "Start the app:",
      "+{pm} run dev"
    ],
    "rename": {
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "src"
        ]
      }
    }
  },
  "files": [
    "build",
    "prisma"
  ],
  "dependencies": {
    "@mantine/code-highlight": "^8.1.3",
    "@mantine/core": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@mantine/modals": "^8.1.3",
    "@mantine/notifications": "^8.1.3",
    "@prisma/client": "^6.11.1",
    "@react-router/node": "^7.6.3",
    "@react-router/serve": "^7.6.3",
    "bcryptjs": "^3.0.2",
    "isbot": "^5.1.28",
    "lucide-react": "^0.525.0",
    "prisma": "^6.11.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.3",
    "remix-auth": "^4.2.0",
    "remix-auth-form": "^3.0.0",
    "remix-themes": "^2.0.4",
    "zod": "^4.0.5",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@react-router/dev": "^7.6.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "jsdom": "^26.1.0",
    "lefthook": "^1.12.2",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-devtools-json": "^0.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
